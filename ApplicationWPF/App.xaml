<Application x:Class="JediTournamentWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Hyperlink" x:Key="ConnexionButton">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="TextDecorations" Value="None"/>
        </Style>

        <BitmapImage x:Key="StarWarsImageBackGround1" UriSource="./Picture/starwars10.jpg" />
        <BitmapImage x:Key="StarWarsImageBackGround2" UriSource="./Picture/starwars5.jpg" />
        <BitmapImage x:Key="JediTournamentLogo" UriSource="./Picture/JediTournamentLogo.png" />

    </Application.Resources>
</Application>
