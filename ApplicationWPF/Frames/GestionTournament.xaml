<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApplicationWPF.Frames" x:Class="ApplicationWPF.Frames.GestionTournament" 
      xmlns:userControls="clr-namespace:ApplicationWPF.ViewModel.Gestion"
      d:DesignHeight="1000" d:DesignWidth="1000"
      mc:Ignorable="d"
	Title="GestionTournament">

    <Grid>
        <TabControl HorizontalAlignment="Stretch"
		    Margin="10,45,0,0"
		    VerticalAlignment="Stretch"
            FontSize="70" Style="{StaticResource TeleMarinesFont}">
            <TabItem Header="Jedi" FontWeight="Bold" Padding="25,20,25,20">
            <Grid Background="#FFE5E5E5" Margin="0,0,4.4,-7">
                    <DockPanel LastChildFill="True">
                        <!-- Barre de recherche des Jedis-->
                        <userControls:CtrlResearch DockPanel.Dock="top"/>
                        <!-- Liste des Jedis -->
                        <ScrollViewer Margin="0,-0.4,0,10">
                            <StackPanel x:Name="sp2">
                                <StackPanel.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="#FF5F4848" Offset="1"/>
                                    </LinearGradientBrush>
                                </StackPanel.Background>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Match" FontWeight="Bold" Padding="25,20,25,20">
                <Grid Background="#FFE5E5E5" Margin="0,0,4.4,-7">
                    <DockPanel LastChildFill="True">
                        <!-- Barre de recherche des Jedis-->
                        <userControls:CtrlResearch DockPanel.Dock="top"/>
                        <!-- Liste des Jedis -->
                        <ScrollViewer Margin="0,-0.4,0,10">
                            <StackPanel x:Name="sp3">
                                <StackPanel.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="#FF5F4848" Offset="1"/>
                                    </LinearGradientBrush>
                                </StackPanel.Background>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Stade" FontWeight="Bold" Padding="25,20,25,20">
                <Grid Background="#FFE5E5E5">
                    <DockPanel LastChildFill="True">
                    <!-- Barre de recherche des Jedis-->
                    <userControls:CtrlResearch DockPanel.Dock="top"/>
                    <!-- Liste des Jedis -->
                    <ScrollViewer Margin="0,-0.4,0,10">
                        <StackPanel x:Name="sp4">
                            <StackPanel.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black" Offset="0"/>
                                    <GradientStop Color="#FF5F4848" Offset="1"/>
                                </LinearGradientBrush>
                            </StackPanel.Background>
                        </StackPanel>
                    </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Tournoi" FontWeight="Bold" Padding="25,20,25,20">
                <Grid Background="#FFE5E5E5">
                    <DockPanel LastChildFill="True">
                        <!-- Barre de recherche des Jedis-->
                        <userControls:CtrlResearch DockPanel.Dock="top"/>
                        <!-- Liste des Jedis -->
                        <ScrollViewer Margin="0,-0.4,0,10">
                            <StackPanel x:Name="sp5">
                                <StackPanel.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="#FF5F4848" Offset="1"/>
                                    </LinearGradientBrush>
                                </StackPanel.Background>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
